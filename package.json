{
	"name": "nextjs",
	"version": "0.1.0",
	"private": true,
	"engines": {
		"node": ">=18",
		"npm": "~9"
	},
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"firebase:start": "firebase emulators:start",
		"firebase:dev": "firebase emulators:exec 'npm run dev'",
		"firebase:firestore:deploy": "firebase deploy --only firestore",
		"test:playwright": "playwright test",
		"test:playwright:smoke-test": "SMOKE_TEST=true playwright test",
		"prepare": "husky install"
	},
	"dependencies": {
		"date-fns": "^2.29.3",
		"eslint-config-next": "13.2.1",
		"eslint-plugin-next": "^0.0.0",
		"firebase": "^9.17.1",
		"flowbite": "^1.6.4",
		"flowbite-react": "^0.4.3",
		"next": "13.2.1",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"reactfire": "^4.2.2"
	},
	"devDependencies": {
		"@playwright/test": "^1.31.1",
		"@types/node": "18.14.1",
		"@types/react": "18.0.28",
		"@typescript-eslint/eslint-plugin": "^5.58.0",
		"@typescript-eslint/parser": "^5.58.0",
		"autoprefixer": "^10.4.14",
		"axios": "^1.3.4",
		"dotenv": "^16.0.3",
		"eslint": "^8.38.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-tailwindcss": "^3.11.0",
		"firebase-admin": "^11.7.0",
		"firebase-tools": "^11.28.0",
		"flowbite-typography": "^1.0.3",
		"husky": "^8.0.0",
		"lint-staged": "^13.2.1",
		"postcss": "^8.4.21",
		"prettier": "^2.8.7",
		"prettier-plugin-tailwindcss": "^0.2.7",
		"tailwindcss": "^3.3.1"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.{html,css,less,ejs}": [
			"prettier --write"
		]
	}
}